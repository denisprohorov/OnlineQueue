@model test.ViewModels.RegisterViewModel
@{ 
    ViewData["Title"] = "Register";
}

<h2>Регистрация нового человечка</h2>
<form class="register p-4" method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name"></label><br />
        <input class="form-control" placeholder="Name" asp-for="Name" />
        <span class="invalid" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input class="form-control" placeholder="Password" asp-for="Password" />
        <span class="invalid" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm"></label><br />
        <input class="form-control" placeholder="ConfirmPassword" asp-for="PasswordConfirm" />
        <span class="invalid" asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input class="btn" style="background-color:#92b1af;" type="submit" value="Регистрация" />
    </div>
</form>
