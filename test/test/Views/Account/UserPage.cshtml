@using test.Database
@model UserDbModel
<!--requered include UsersQueues, QueuesAsTeacher, QueuesAsAuthor, UserQueue.QueueDbModel  -->

@{
    ViewData["Title"] = "User " + Model.UserName;
}

<h3 class="headOfPage">This is a <span class="highlight">@Model.UserName</span>'s pofile</h3>

<div class="info">
    <table class="table">
        <tr>
            <td>
                <span class="number">@Model.UsersQueues.Count()</span>
                <p>Queues as a member</p>
                <div class="dropdown-divider"></div>
                <div class="ListQ">
                    @foreach (UserQueueDbModel UserQueue in Model.UsersQueues)
                    {
                        <p><a asp-controller="Queue" asp-action="QView" asp-route-Id="@UserQueue.QueueDbModelId">@UserQueue.QueueDbModel.Title</a></p>;
                    }
                </div>
            </td>
            <td>
                <span class="number">@Model.QueuesAsTeacher.Count()</span>
                <p>Queues as a Teacher</p>
                <div class="dropdown-divider"></div>
                <div class="ListQ">
                    @foreach (QueueDbModel Queue in Model.QueuesAsTeacher)
                    {
                        <p><a asp-controller="Queue" asp-action="QView" asp-route-Id="@Queue.Id">@Queue.Title</a></p>;
                    }
                </div>
            </td>
            <td>
                <span class="number">@Model.QueuesAsAuthor.Count()</span>
                <p>Queues as a Author</p>
                <div class="dropdown-divider"></div>
                <div class="ListQ">
                    @foreach (QueueDbModel Queue in Model.QueuesAsAuthor)
                    {
                        <p><a asp-controller="Queue" asp-action="QView" asp-route-Id="@Queue.Id">@Queue.Title</a></p>;
                    }
                </div>
            </td>
        </tr>
    </table>
</div>
