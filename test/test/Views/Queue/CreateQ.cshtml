@using test.Models
@model test.ViewModels.CreateQViewModel
@{
    ViewData["Title"] = "CreateQ";
    ViewData["CurrentTab"] = 2;
}


<h2>Create new queue</h2>
<form class="createQ p-4" method="post" asp-controller="Queue" asp-action="CreateQ">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Title"></label><br />
        <input class="form-control" placeholder="Title" asp-for="Title" autocomplete="off" />
        <span class="invalid" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="About"></label><br />
        <input class="form-control" placeholder="About" asp-for="About" autocomplete="off" />
        <span class="invalid" asp-validation-for="About"></span>
    </div>
    <div class="form-group">
        <label asp-for="Priority"></label><br />
        <select class="custom-select" asp-for="Priority">
            <option value="@PriorityTypes.None" selected="selected">@PriorityTypes.None</option>
            <option value="@PriorityTypes.Less">@PriorityTypes.Less</option>
            <option value="@PriorityTypes.Greater">@PriorityTypes.Greater</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Teacher"></label><br />
        <input class="form-control" placeholder="Name" asp-for="Teacher" />
        <span class="invalid" asp-validation-for="Teacher"></span>
    </div>
    <div>
        <input class="btn" style="background-color:#92b1af;" type="submit" value="Готово" />
    </div>
</form>
